<% @posts.each do |post| %>
  <div class="post <%= post.slug %>">
    <header>
      <h1>
        <a href="/<%= post.slug %>"><%= post.title %></a>
      </h1>

      <% if post.date %>
        <time datatime="<%= post.date.to_s %>">
          <a href="/<%= post.slug %>">
            <%= post.date.to_s(:short_ordinal) %>
          </a>
        </time>
      <% end %>

      <% if post.author %>
        <p class="author">
          by <%= post.author %>
        </p>
      <% end %>
    </header>

    <div class="body">
      <%== post.render %>
    </div>
  </div>
<% end %>

<% content_for :footer do %>
  <div class="container">
    <% if paginate_next?(@posts) || paginate_previous? %>
      <% if paginate_previous? %>
        <a href="<%= paginate_previous_url %>">Previous</a>
      <% end %>

      <% if paginate_next?(@posts) %>
        <a href="<%= paginate_next_url %>">Next</a>
      <% end %>
    <% end %>
  </div>
<% end %>
